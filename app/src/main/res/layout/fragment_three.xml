<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/threeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment 3"
        android:textStyle="bold"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/navButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/navButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="navigation graph"
        app:layout_constraintEnd_toEndOf="@+id/threeTextView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/threeTextView"
        app:layout_constraintTop_toBottomOf="@+id/threeTextView"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/dataBindingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="data binding"
        app:layout_constraintEnd_toEndOf="@+id/navButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/navButton"
        app:layout_constraintTop_toBottomOf="@+id/navButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mvvmRoomButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MVVM with Room"
        app:layout_constraintEnd_toEndOf="@+id/dataBindingButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/dataBindingButton"
        app:layout_constraintTop_toBottomOf="@+id/dataBindingButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/simpleRetrofitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Simple Retrofit"
        app:layout_constraintEnd_toEndOf="@+id/mvvmRoomButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/mvvmRoomButton"
        app:layout_constraintTop_toBottomOf="@+id/mvvmRoomButton"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/mvvmRetrofitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MVVM with Retrofit"
        app:layout_constraintEnd_toEndOf="@+id/simpleRetrofitButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/simpleRetrofitButton"
        app:layout_constraintTop_toBottomOf="@+id/simpleRetrofitButton"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>